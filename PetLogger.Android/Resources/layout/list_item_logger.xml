<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:padding="6dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:background="@drawable/list_logger_selector"
    android:descendantFocusability="blocksDescendants">

        <LinearLayout
            android:id="@+id/title_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:descendantFocusability="blocksDescendants">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fam_log_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/plus"
                android:scaleType="fitCenter"
                android:padding="0dp"
                android:adjustViewBounds="true"
                app:backgroundTint="#607D8B"
                app:fabSize="auto"
                app:elevation="6dp"
                app:borderWidth="0dp" />

            <TextView
                android:id="@+id/title"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="12dp"
                android:textColor="@color/textWhite" />
        
        </LinearLayout>

    <com.pottylogger.android.components.CountDownView
        android:id="@+id/time_since"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/title_section"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:timeTextSize="36"
        app:timeTextColor="@color/textWhite"
        app:labelTextSize="12"
        app:labelTextColor="@color/textWhite"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/button_add_schedule"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:src="@drawable/add_alert_white_36dp"
            android:backgroundTint="#00000000"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:title="Alert"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <TextView
            android:id="@+id/add_schedule_label"
            android:text="Add Schedule"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="12dp"
            android:textColor="@color/textWhite" />

    </LinearLayout>
  
</RelativeLayout>